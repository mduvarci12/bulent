<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="800dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


    <ImageView
        android:id="@+id/bgimage"
        android:layout_width="263dp"
        android:layout_height="31dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="210dp"
        android:scaleType="fitXY"

        app:layout_constraintBottom_toTopOf="@+id/girisYap"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/girisYap"
        android:layout_width="205dp"
        android:layout_height="35dp"
        android:layout_marginBottom="186dp"
        android:background="@drawable/roundedcorners"
        android:onClick="girisYap"
        android:text="Giriş Yap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgimage" />

    <Button
        android:id="@+id/kayitOl"
        android:layout_width="205dp"
        android:layout_height="35dp"
        android:layout_marginBottom="119dp"
        android:background="@drawable/roundedcorners"
        android:onClick="kayitButton"
        android:text="Kayıt Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisYap" />


</android.support.constraint.ConstraintLayout>