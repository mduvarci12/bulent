<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TabFragment33">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/roundedcorners">

        <TextView
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:text="@string/isimsoyisim"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/isimSoyisim"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <TextView
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:text="Telefon Numarası"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/telno"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <TextView
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:text="E-Posta Adresi"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:text="Mesajınız"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mesajım"
            android:layout_width="284dp"
            android:layout_height="80dp"
            android:textAlignment="center" />
        <Button
            android:id="@+id/yollaB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gönder"/>


    </LinearLayout>


</FrameLayout>